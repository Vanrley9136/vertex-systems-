const fs = require('fs');

const projects = [
  { id: 'atlas-almoxarifado', title: 'Atlas Almoxarifado' },
  { id: 'sistema-de-cardapio', title: 'Sistema de Cardápio' },
  { id: 'assinaturas-corporativas', title: 'Assinaturas Corporativas' },
  { id: 'lockguard', title: 'LockGuard' },
  { id: 'estudio-de-beleza', title: 'Estúdio de Beleza' },
];

const baseUrls = [
  { path: '/', changefreq: 'daily', priority: '1.0' },
  { path: '/nossas-solucoes', changefreq: 'weekly', priority: '0.8' },
  { path: '/tecnologias', changefreq: 'weekly', priority: '0.8' },
  { path: '/quem-somos', changefreq: 'monthly', priority: '0.7' },
  { path: '/fale-conosco', changefreq: 'monthly', priority: '0.7' },
  { path: '/politica-de-privacidade', changefreq: 'yearly', priority: '0.5' },
  { path: '/certificados', changefreq: 'yearly', priority: '0.6' },
  { path: '/projetos', changefreq: 'weekly', priority: '0.8' },
];

let sitemap = `<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">\n`;

baseUrls.forEach((url) => {
  sitemap += `  <url>
    <loc>https://vertex-systems.vercel.app/#${url.path}</loc>
    <changefreq>${url.changefreq}</changefreq>
    <priority>${url.priority}</priority>
  </url>\n`;
});

projects.forEach((project) => {
  sitemap += `  <url>
    <loc>https://vertex-systems.vercel.app/#/projeto/${project.id}</loc>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>\n`;
});

sitemap += '</urlset>';

fs.writeFileSync('public/sitemap.xml', sitemap);
console.log('Sitemap gerado com sucesso!');
